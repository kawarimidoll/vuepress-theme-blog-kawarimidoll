@tailwind base;
@tailwind components;
@tailwind utilities;

@layer utilities

  // TOC
  .table-of-contents
    @apply p-2
    ul
      @apply pl-4 list-none
    a
      @apply block text-gray-400
      &:hover
        @apply text-gray-900
    .router-link-active
      @apply text-gray-900

  #content .table-of-contents
    @apply max-w-4xl m-2
  // TOC

  // social-share
  .social-share-global
    button:focus
      @apply outline-none
    svg
      @apply inline
  // social-share

  // header
  h1, h2, h3, h4, h5, h6
    @apply font-semibold leading-tight

    {$contentClass}:not(.custom) > &
      @apply mt-4 mb-2
      // @apply mt-2 mb-0 pb-4
      // margin-top (0.5rem - $navbarHeight)
      // padding-top ($navbarHeight + 1rem)

      &:first-child
        @apply -mt-6 mb-4


        + p, + pre, + .custom-block
          @apply mt-8

    &:focus a.header-anchor,
    &:hover a.header-anchor
      @apply opacity-100

  a.header-anchor
    @apply -ml-4 opacity-0

#header
  height $navbarHeight

#footer
  height $footerHeight

#sidebar
  width $sidebarWidth

.container
  max-width 1185px
